<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label>Airline:
      <input type="text" name="airline" id="airline-input">
    </label><br>
    <label>Airport:
      <input type="text" select name="airport" option value="DEN" selected id="airport-input">
    </label><br>
    <label>Flight No.:
      <input type="text" name="flightNo" id="flight-num-input">
    </label><br>
    <label>Departs:
      <input type="datetime-local" name="departs" id="departs-input">
    </label><br>
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>