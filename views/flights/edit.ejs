<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
    id="new-form" 
    action="/flights/<%= flight._id %>?_method=PUT" 
    method="POST"
  >
    <label>Airline:
      <input type="text" name="airline" value="<%= flight.airline %>" id="airline-input">
    </label><br>
    <label>Airport:
      <input type="text" select name="airport" value="<%= flight.airport %>" option value="DEN" selected id="airport-input">
    </label><br>
    <label>Flight No.:
      <input type="text" name="flightNo" value="<%= flight.flightNo %>"id="flight-num-input">
    </label><br>
    <label>Departs:
      <input type="datetime-local" name="departs" value="<%= flight.departs %>"id="departs-input">
    </label><br>
    
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>